{
	"name": "ts-pkg",
	"version": "0.1.0",
	"description": "Boilerplate to create npm packages in TypeScript.",
	"main": "./dist/index.js",
	"types": "./dist/index.d.js",
	"files": [
		"./dist/**/*"
	],
	"scripts": {
		"build": "tsc -p tsconfig.build.json",
		"clean": "rm -rf ./dist",
		"prepare": "husky install",
		"test:watch": "jest --watch",
		"test": "jest",
		"lint": "eslint ./src/ --fix",
		"cm": "cz"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/lucaausde/ts-pkg.git"
	},
	"keywords": [
		"npm",
		"boilerplate",
		"workflow",
		"typescript",
		"jest",
		"commitizen"
	],
	"author": "lucaausde",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/lucaausde/ts-pkg/issues"
	},
	"homepage": "https://github.com/lucaausde/ts-pkg#readme",
	"devDependencies": {
		"@types/jest": "^27.4.0",
		"@types/node": "^17.0.8",
		"@typescript-eslint/eslint-plugin": "^5.9.1",
		"@typescript-eslint/parser": "^5.9.1",
		"commitizen": "^4.2.4",
		"cz-conventional-changelog": "^3.3.0",
		"eslint": "^8.6.0",
		"eslint-config-prettier": "^8.3.0",
		"husky": "^7.0.4",
		"jest": "^27.4.7",
		"jest-extended": "^1.2.0",
		"prettier": "^2.5.1",
		"semantic-release": "^18.0.1",
		"ts-jest": "^27.1.2",
		"ts-node": "^10.4.0",
		"typescript": "^4.5.4"
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	}
}
